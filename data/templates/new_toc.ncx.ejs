<?xml version='1.0' encoding='utf-8'?>
<ncx xmlns="http://www.daisy.org/z3986/2005/ncx/" version="2005-1" xml:lang="eng">
    <head>
        <meta name="dtb:depth" content="3" />
        <meta name="dtb:generator" content="Halil Ozturk" />
        <meta name="dtb:totalPageCount" content="604" />
        <meta name="dtb:maxPageNumber" content="604" />
    </head>
    <docTitle>
        <text><%= title %></text>
    </docTitle>
    <navMap>
        <% let playOrder = 1; %>
        <navPoint id="toc" playOrder="<%= playOrder++ %>" class="chapter">
            <navLabel>
                <text><%= tocTitle %></text>
            </navLabel>
            <content src="toc.xhtml"/>
        </navPoint>
        <% content.forEach(function(content, index){ %>
        <navPoint id="<%= `content-${index+1}` %>" playOrder="<%= playOrder++ %>" class="chapter">
             <navLabel>
                <text><%= content.title %></text>
            </navLabel>
            <content src="<%= content.href %>"/>
        </navPoint>
        <% }) %>
    </navMap>


</ncx>
